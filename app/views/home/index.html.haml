.signup-form

  .row
    .six.columns.offset-by-three
      #signup-form
        %p
          We're getting ready to launch the MyGov private beta. Sign up to kick the tires.
        #fieldset
          = form_for @beta_signup do |form|
            = form.label :email
            = form.email_field :email
            = form.submit 'Sign up', :class => 'large button positive ' 

%script{:type => "text/template", :id => "beta_signup_confirmation"}
  = render :partial => "/beta_signups/confirmation"
    
%script{:type => "text/template", :id => "beta_signup_failure"}
  = render :partial => "/beta_signups/failure"

%script{:type => "text/template", :id => "beta_signup_invalid_email"}
  = render :partial => "/beta_signups/invalid_email"

%script{:type => "text/template", :id => "beta_signup_duplicate_email"}
  = render :partial => "/beta_signups/duplicate_email"
  
%script{:type => "text/template", :id => "beta_signup_blank_email"}
  = render :partial => "/beta_signups/blank_email"