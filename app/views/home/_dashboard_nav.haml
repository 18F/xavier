.group
  %ul.dashboard-navigation{"data-magellan-expedition" => ""} 
    - if @uncompleted_tasks.any?
      %li.first{"data-magellan-arrival" => "tasks"}
        %a.smoothScroll.tasks{:href => "#tasks"}
          .arrow
          %i{:class => "foundicon-checkmark"}
          Tasks          
    %li{"data-magellan-arrival" => "apps"}
      %a.smoothScroll.apps{:href => "#apps"}
        .arrow
        %i{:class => "foundicon-website"}  
        Apps
    - if @local_info and @local_info['jurisdictions']  
      %li{"data-magellan-arrival" => "info"}
        %a.smoothScroll.info{:href => "#info"}
          .arrow
          %i{:class => "foundicon-globe"}   
          Info  
    %li.last{"data-magellan-arrival" => "forms"}
      %a.smoothScroll.forms{:href => "#forms"}
        .arrow
        %i{:class => "foundicon-inbox"} 
        Forms             