.panel.task.dashboard{"data-magellan-destination" => "tasks"} 
  %h3 
    %i{:class => "foundicon-checkmark"}
    Tasks
    %a{:name => "tasks"} 
  %span.bookmark
  - if @uncompleted_tasks.any?
    - @uncompleted_tasks.each do |task|
      %div
        %h4
          = link_to task.name, task_path(task)
  - else
    %div
      %h4
        No tasks