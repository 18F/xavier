.row
  .twelve.columns
    %h2
      Messages &amp; Notifications
.row
  .eight.columns
    .panel
      %h3
        = @notification.subject
      %ul.meta-list
        %li
          Received at: #{time_ago_in_words(@notification.received_at)}
        %li
          - if @notification.app
            From: #{@notification.app.name}
          - else
            MyGov
      %p
        = @notification.body
      = link_to notification_path(@notification), :method => :delete, :class => 'small button' do
        %i{:class => 'foundicon-remove'}
        Remove