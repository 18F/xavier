!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, user-scalable=no")
    %title= content_for?(:title) ? yield(:title) : "MyGov"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    = favicon_link_tag 'favicon.ico', :rel => 'shortcut icon'
    = favicon_link_tag 'touch-icon-iphone.png', :rel => 'apple-touch-icon', :type => 'image/png'
    = favicon_link_tag 'touch-icon-ipad.png', :rel => 'apple-touch-icon', :type => 'image/png'
    = favicon_link_tag 'touch-icon-iphone4.png', :rel => 'apple-touch-icon', :type => 'image/png'

  %body
    #wrap
      #header
        .nav-container.group
          .row
            .twelve.columns
              %h1
                My<span>Gov</span>
    
      #main
        .nav-container.group
          .row
            .twelve.columns      
        .container.group
          = yield
        - unless current_user
          .no-toolbar
          
    - if current_user
      .discovery-bar  
        %ul.nav-bar
          %li.active{:style => 'padding: 0px 10px 0px 10px;'}
            = link_to 'MyGov', root_path
          %li.left
            = link_to notifications_path do
              Notifications
              - if current_user.notifications.count > 0
                %span.label.round.alert{:style => 'white-space: normal;'}
                  = current_user.notifications.count
          %li.right= link_to "Sign out", sign_out_path
          %li.right= link_to(current_user.name || "Your Profile", profile_path)
          
      /
        Javascripts
        \==================================================
      / Placed at the end of the document so the pages load faster
      = javascript_include_tag "application"
      = render :partial => "shared/ab", :locals => { :segment => @segment }
      = analytics_init if Rails.env.production?
