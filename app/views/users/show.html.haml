.row
  .eight.columns
    
    %h2
      Your Profile
   
  .four.columns.align-right.actions           
    = link_to 'Edit profile', edit_profile_path, :class => 'small button'
      
    
      
.row
  .six.columns
    .panel.listing
      %h3
        Name
      %ul.profile      
        %li
          Title: #{@user.title}
        %li
          First name: #{@user.first_name}
        %li
          Middle name: #{@user.middle_name}
        %li
          Last name: #{@user.last_name}
        %li
          Suffix: #{@user.suffix}
    
    .panel.listing
      %h3
        Address
      %ul.profile 
        %li
          Address: #{@user.address}
        %li
          Address (Line 2): #{@user.address2}
        %li
          City: #{@user.city}
        %li
          State: #{@user.state}
        %li
          Zip: #{@user.zip}
    
          
    

  .six.columns        
    .panel.listing
      %h3
        Date of birth
      %ul.profile   
        %li
          #{@user.date_of_birth}
    
    
          
    .panel.listing
      %h3 
        Phone
      %ul.profile   
        %li
          Phone: #{@user.phone_number}
        %li
          Mobile: #{@user.mobile_number}
        %li
          Gender: #{@user.print_gender}
    
    .panel.listing
      %h3
        Information about you
      %ul.profile   
        %li
          Marital status: #{@user.print_marital_status}
        %li
          Parent: #{yes_or_no(@user.is_parent)}
        %li
          Veteran: #{yes_or_no(@user.is_veteran)}
        %li
          Student: #{yes_or_no(@user.is_student)}
        %li
          Retired: #{yes_or_no(@user.is_retired)}
    
.row


