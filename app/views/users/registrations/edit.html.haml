.row
  .col-md-2
    %h5
      Settings

    %ul.nav.nav-pills.nav-stacked
    = render_navigation(:context => :settings)

  .col-md-8
    %h2
      Change Your Password
    - if flash.notice
      .alert.alert-info
        = flash.notice
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, novalidate: true }) do |f|
      = devise_error_messages!

      %div
        = f.label :current_password
        %br
        = f.password_field :current_password
        %br
        = f.label :current_password, "New Password"
        %br
        = f.password_field :password, autocomplete: 'off'
        %br
        = f.label :password_confirmation, "Confirm New Password"
        %br
        = f.password_field :password_confirmation

      %div= f.submit "Update", :class=>'btn btn-primary'
    %p
      = link_to "Back", settings_path
