.row
  .col-md-2
    %h5
      Settings

    %ul.nav.nav-pills.nav-stacked
    = render_navigation(:context => :settings)

  .col-md-8
    %h2
      Change Your Password

    %p
      Create a new password for
      %strong
        = @user.email

    - unless resource.errors.empty?
      .alert.alert-danger
        = devise_error_messages!
    - if flash.notice
      .alert.alert-info
        = flash.notice

    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, novalidate: true, :class => 'form' }) do |f|

      %div
        = f.label :current_password
        %br
        = f.password_field :current_password
        %br
        = f.label :current_password, "New Password"
        %br
        = f.password_field :password, autocomplete: 'off'
        %br
        = f.label :password_confirmation, "Confirm New Password"
        %br
        = f.password_field :password_confirmation

      %div
        = f.submit "Update my password", :class=>'btn btn-primary form-button'