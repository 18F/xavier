.row-fluid
  .span12
    %legend
      = @app.name
    %h5
      When were you born?
    = form_for @user, :url => contact_info_app_path(@app) do |form|
      = form.hidden_field :title
      = form.hidden_field :first_name
      = form.hidden_field :middle_name
      = form.hidden_field :last_name
      = form.hidden_field :suffix
      = form.hidden_field :address
      = form.hidden_field :address2
      = form.hidden_field :city
      = form.hidden_field :state
      = form.hidden_field :zip
      %p
        = form.label :date_of_birth
        = form.date_select :date_of_birth, :start_year => 1900, :end_year => Date.current.year, :prompt => {:day => 'Choose day', :month => 'Choose month', :year => 'Choose year'}
      = submit_tag 'Continue'
