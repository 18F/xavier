= render :partial => 'header'
.row
  .eight.columns      
    = form_for @user, :url => @action_path || contact_info_app_path(@app) do |form|
      = render 'hidden_info_fields', :form => form
      = render 'hidden_address_fields', :form => form
      %fieldset
        %legend
          When were you born?
        %ol
          %li
            = form.date_select :date_of_birth, :start_year => 1900, :end_year => Date.current.year, :prompt => {:day => 'Day', :month => 'Choose month', :year => 'Year'}, :date_separator => "</li><li>".html_safe
      %div.actions
        = submit_tag 'Continue', :class => 'large button'
