= render :partial => 'header'
.row
  .eight.columns      
    = form_for @user, :url => @action_path || contact_info_app_path(@app) do |form|
      = render 'hidden_info_fields', :form => form
      = render 'hidden_address_fields', :form => form
      %fieldset
        %legend
          When were you born?
        %ol
          %li
            = form.date_select :date_of_birth, :start_year => 1900, :end_year => Date.current.year, :date_separator => "</li><li>".html_safe, :default => { :year => 1998, :month => 1, :day => 1}
      %div.actions
        = submit_tag 'Continue', :class => 'large button'
