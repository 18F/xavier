= render :partial => 'header'
.row
  .twelve.columns
.row
  .eight.columns
    = form_for @user, :url => @action_path || review_app_path(@app) do |form|
      = render 'hidden_info_fields', :form => form
      = render 'hidden_address_fields', :form => form
      = form.hidden_field :date_of_birth
      %fieldset
        %legend
          What's the best way to reach you?
        %ol
          %li
            = form.label :email, "Email address"
            = form.text_field :email
          %li
            = form.label :phone_number, 'Home phone'
            = form.text_field :phone_number
          %li
            = form.label :mobile_number, 'Mobile phone'
            = form.text_field :mobile_number
      %div.clear.actions
        = submit_tag 'Continue', :class => 'large button'
