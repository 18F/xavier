.row
  .twelve.columns
    %h3
      Create a new MyUSA App
.row
  .eight.columns
    = form_for @app do |f|
      - if @app.errors
        .alert-box.alert
          = error_messages_for(@app)
      = render :partial => "form", :locals => {:f => f, :oauth_scopes => @oauth_scopes}
      = f.submit 'Register new MyUSA App', :class => 'button positive'
      = link_to 'Cancel', apps_path