.row
  .nine.columns
    %h5
      Address
    = form_for @user, :url => address_app_path(@app), :method => :post do |form|
      = render 'hidden_info_fields', :form => form
      = render 'hidden_address_fields', :form => form
      = submit_tag 'Edit Address', :class => 'small button'
.row
  .six.columns
    %table.responsive
      %tbody
        %tr
          %td
            Address
          %td
            = @user.address
        %tr
          %td
            Address 2
          %td
            = @user.address2
        %tr
          %td
            City
          %td
            = @user.city
        %tr
          %td
            State
          %td
            = @user.state
        %tr
          %td
            Zip
          %td
            = @user.zip