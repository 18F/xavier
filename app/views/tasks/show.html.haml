.row
  .twelve.columns
    .panel.task.group
      .six.columns
        %h2
          #{@task.app.name}
        %p
          %strong
            #{@task.task_items.completed.size} of #{@task.task_items.size} 
          items completed.
      
      .six.columns
        - if @task.completed?
          %h5
            Task completed at #{@task.completed_at}
        - else
      .six.columns.align-right
        = link_to task_path(@task, :completed => true), :method => :put, :class => '' do
          %i{:class => 'foundicon-checkmark'}
          Mark all items complete    
      
      .twelve.columns
  
        %ol.inline.group
        - @task.task_items.each do |task_item|
          %li
            %h5
              = task_item.name
            - if task_item.completed?
              Item completed at: #{task_item.completed_at}
            - else
              = link_to fill_pdf_path, :class => "large button alternate task", :target => "_blank" do
                %i{:class => 'foundicon-down-arrow'}
                Download Pre-filled PDF form                  
            = link_to  task_path(@task, :completed => true), :method => :put, :class => '' do
              %i{:class => 'foundicon-checkmark'}
              Mark Complete
            = button_to 'Remove', task_item_path(task_item), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'button transparent'
                
                  